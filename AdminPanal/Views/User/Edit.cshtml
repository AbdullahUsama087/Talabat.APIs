@model UserRolesViewModel


@{
    ViewData["Title"] = "Edit";
}

<h1>Edit User Roles</h1>

<br />
<br />

<form asp-action="Edit">
    <div asp-validation-summary="All"></div> @* List the Whole Form Error Messages *@

    <div class="form-group">
        <input asp-for="UserId" class="form-control" hidden />
        @* <span asp-validation-for="UserId" class="text-danger"></span> *@
    </div>

    <div class="form-group">
        <input asp-for="UserName" class="form-control" hidden />
        @* <span asp-validation-for="UserName" class="text-danger"></span> *@
    </div>

    <br />

    <h3>Manage User Roles</h3>
    <hr />
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model.Roles[i].RoleName" hidden />
            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
            <label asp-for="@Model.Roles[i]" class="form-check-label">@Model.Roles[i].RoleName</label>
            <span asp-validation-for="Roles" class="text-danger"></span>
        </div>
    }
    <br />
    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section validationScriptSection {
    @* <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script> *@

    <partial name="_ValidationScriptsPartial" />
}


